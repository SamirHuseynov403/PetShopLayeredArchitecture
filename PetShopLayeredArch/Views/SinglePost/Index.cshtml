<section id="latest-blog" class="my-5">
    <div class="container py-5 my-5">
        <div class="row mt-5">
            <div class="section-header d-md-flex justify-content-between align-items-center mb-3">
                <h2 class="display-3 fw-normal">Recent Blog Post</h2>
                <div>
                    <a href="#" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1">
                        Read all
                        <svg width="24" height="24" viewBox="0 0 24 24" class="mb-1">
                            <use xlink:href="#arrow-right"></use>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.BlogPosts)
            {
                <div class="col-md-4 my-4 my-md-0">
                    <div class="z-1 position-absolute rounded-3 m-2 px-3 pt-1 bg-light">
                        <h3 class="secondary-font text-primary m-0">@item.PublishedDate.Day</h3>
                        <p class="secondary-font fs-6 m-0">@item.PublishedDate.Month</p>

                    </div>
                    <div class="card position-relative">
                        <a asp-controller="BlogPost" asp-action="Index"><img src="~/images/@item.ImageUrl" class="img-fluid rounded-4" alt="image"></a>
                        <div class="card-body p-0">
                            <a asp-controller="BlogPost" asp-action="Index">
                                <h3 class="card-title pt-4 pb-3 m-0">@item.Title</h3>
                            </a>
                            <div class="card-text">
                                <p class="blog-paragraph fs-6">
                                    @item.Description
                                </p>
                                <a asp-controller="BlogPost" asp-action="Index" class="blog-read">read more</a>
                            </div>

                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</section>


