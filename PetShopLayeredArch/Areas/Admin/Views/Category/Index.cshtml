@using PetShop.BLL.DTOs.Category
@using PetShop.DAL.Entities
@model List<CategoryDto>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="border:1px solid #ccc;">
                <h4 class="card-title">Categories</h4>
                <a class="btn btn-primary" asp-controller="Category" asp-action="create">Add</a>
                <div class="table-responsive pt-3" style="border:1px solid #ccc;">
                    <table class="table table-bordered" style="border:1px solid #ccc;">
                        <thead>
                            <tr>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    #
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Category
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Image Category
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @count
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Name
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Url
                                    </td>
                                    <td style="border:1px solid #ccc;">
                                        
                                        <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a>

                                        <form asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>

                                    </td>

                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>